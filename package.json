{
  "name": "jv-printer",
  "description": "Gerenciador de impress√£o ClickExpress",
  "version": "2.0.1",
  "main": "main.js",
  "author": "joaosn",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "npm run dist:win32 && npm run dist:win64",
    "dist:win32": "electron-builder --win --ia32 --config.directories.output=dist/win32",
    "dist:win64": "electron-builder --win --x64 --config.directories.output=dist/win64",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^4.0.0",
    "fix-path": "^2.1.0"
  },
  "devDependencies": {
    "electron": "*",
    "electron-builder": "^24.11.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^3.1.10"
  },
  "build": {
    "appId": "com.jvtech.printer",
    "productName": "jv-printer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JV Printer"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "JZ-TECH-SYS",
        "repo": "gerenciadorImpressaoJV"
      }
    ]
  }
}
