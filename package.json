{
  "name": "jv-printer",
  "description": "Gerenciador de impressão ClickExpress",
  "version": "2.2.0",
  "main": "main.js",
  "author": "joaosn",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "dist": "electron-builder",
    "dist:all": "npm run dist:win32 && npm run dist:win64",
    "dist:win32": "electron-builder --win --ia32 --config.directories.output=dist/win32",
    "dist:win64": "electron-builder --win --x64 --config.directories.output=dist/win64",
    "dist:linux": "electron-builder --linux --x64",
    "dist:linux-arm64": "electron-builder --linux --arm64",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-log": "^5.4.3",
    "electron-store": "^4.0.0",
    "electron-updater": "^6.6.2",
    "fix-path": "^2.1.0"
  },
  "devDependencies": {
    "electron": "*",
    "electron-builder": "^24.11.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.10",
    "sharp": "^0.34.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["electron", "sharp"]
  },
  "build": {
    "appId": "com.jvtech.printer",
    "productName": "jv-printer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png",
      "artifactName": "jv-printer-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JV Printer"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Utility",
      "artifactName": "jv-printer-${version}-${arch}.${ext}",
      "maintainer": "JZ-TECH-SYS",
      "executableName": "jv-printer",
      "desktop": {
        "Name": "JV Printer",
        "Comment": "Gerenciador de impressão inteligente",
        "Terminal": "false",
        "Type": "Application",
        "Categories": "Utility;Printing;",
        "Icon": "jv-printer",
        "StartupWMClass": "jv-printer"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "JZ-TECH-SYS",
        "repo": "gerenciadorImpressaoJV"
      }
    ]
  }
}
